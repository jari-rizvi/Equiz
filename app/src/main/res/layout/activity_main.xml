    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_30sdp"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navGraph="@navigation/main_navigation_graph" />


            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/navigationBottomBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.teamx.equiz.games.nav_custom.custombottomnav.SSCustomBottomNavigation
                android:id="@+id/bottomNavigationq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:ss_circleColor="#00FFFFFF"
                app:ss_countBackgroundColor="#00FFFFFF"
                app:ss_countTextColor="#00FFFFFF"
                app:ss_defaultIconColor="@color/white"
                app:ss_iconTextColor="@color/white"
                app:ss_iconTextSize="2sp"
                app:ss_rippleColor="#2f424242"
                app:ss_selectedIconColor="@color/white"
                app:ss_selectedIconTextColor="@color/white"
                app:ss_shadowColor="#1f212121"
                app:ss_waveHeight="20" />

            <View
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintTop_toTopOf="@+id/bottomNavigationq"
                app:layout_constraintBottom_toBottomOf="@+id/bottomNavigationq" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <include
            android:id="@+id/drawerLayoutMain"
            layout="@layout/drawer_layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start" />

    </androidx.drawerlayout.widget.DrawerLayout>


</layout>