<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iconbg">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:srcCompat="@drawable/arrow_left"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:textColor="@color/black"
            android:textSize="@dimen/_25ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnback"
            app:layout_constraintVertical_bias="0.05" />


        <TextView
            android:id="@+id/game1tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_bold"
            android:text="Game 1"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game1per"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/game1per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/poppins_bold"
            android:text="0%"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/game1tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game1tv"
            app:layout_constraintTop_toTopOf="@+id/game1tv" />


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/simpleProgressBar"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:max="100"

            app:indicatorColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game1per"
            app:layout_constraintStart_toStartOf="@+id/game1tv"
            app:layout_constraintTop_toBottomOf="@+id/game1tv"
            app:layout_constraintVertical_bias="0"
            app:trackColor="@color/white"
            app:trackCornerRadius="@dimen/_10sdp"
            app:trackThickness="@dimen/_10sdp" />


        <TextView
            android:id="@+id/game2tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/poppins_bold"
            android:text="Game 2"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game1per"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleProgressBar"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/game2per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="0%"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/game2tv"
            app:layout_constraintEnd_toEndOf="@+id/game1per"
            app:layout_constraintStart_toStartOf="@+id/game1per"
            app:layout_constraintTop_toTopOf="@+id/game2tv" />


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/simpleProgressBar1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:max="100"

            app:indicatorColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game1per"
            app:layout_constraintStart_toStartOf="@+id/game1tv"
            app:layout_constraintTop_toBottomOf="@+id/game2per"
            app:layout_constraintVertical_bias="0"
            app:trackColor="@color/white"
            app:trackCornerRadius="@dimen/_10sdp"
            app:trackThickness="@dimen/_10sdp" />


        <TextView
            android:id="@+id/game3tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:fontFamily="@font/poppins_bold"
            android:text="Game 3"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game1per"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simpleProgressBar1"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/game3per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="0%"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/game3tv"
            app:layout_constraintEnd_toEndOf="@+id/game2per"
            app:layout_constraintStart_toStartOf="@+id/game2per"
            app:layout_constraintTop_toTopOf="@+id/game3tv" />


        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/simpleProgressBar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"

            app:indicatorColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game1per"
            app:layout_constraintStart_toStartOf="@+id/game1tv"
            app:layout_constraintTop_toBottomOf="@+id/game3tv"
            app:layout_constraintVertical_bias="0"
            app:trackColor="@color/white"
            app:trackCornerRadius="@dimen/_10sdp"
            app:trackThickness="@dimen/_10sdp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>